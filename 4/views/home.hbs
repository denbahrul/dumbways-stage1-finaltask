    {{!-- Navbar --}}
    <nav class="flex justify-between max-w-screen-lg m-auto px-8 py-5">
        <a href="/" class="text-orange-500 font-bold text-2xl">wiki<strong class="text-white">Games</strong></a>
        {{#if isLogin}}
            <a href="/logout" class=" text-orange-500 font-semibold text-xl"><i class="fa-solid fa-arrow-right-to-bracket"></i> Logout</a>
