                <a href="/add-type" class="bg-orange-500 text-white px-8 py-1 rounded-md">Add Type</a>
            </div>
        {{/if}}
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
        {{#each data}}
            <div class="w-full p-2.5 bg-slate-800 rounded-md">
                <img class="object-cover h-80 w-full rounded-sm" src="/upload-files/{{this.photo}}">
                <p class="text-white mt-2 text-xl font-semibold">{{this.name}}</p>
                <p class="text-green-500 mb-4 mt-1">Type</p>
                <a href="/hero-detail/{{this.id}}" class="cursor-pointer">
                    <div class="bg-orange-500 text-white px-8 py-1 rounded-md w-full">
                        <p class="text-center">Detail</p>
                    </div>
                </a>
